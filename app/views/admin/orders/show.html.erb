<h2>注文履歴詳細</h2>
<table>
  <tr>
    <th>購入者</th>
    <!--ここは-->
    <td><%= @order.public %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.customer.last_name %> <%= @order.customer.first_name %>></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>〒<%= @order.postal_code %> <%= @order.address %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.derspayment_method %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
      <%= form_with model: @order do |f| %>
      <!--enumで-->
       <%#= f.select :order_status,["入金待ち","入金確認","製作中","発送準備中","発送済"] %>
       <%= f.submit '更新', class:"btn btn-lg btn-block btn-info mt-4" %>
      <% end %>
  </tr>
</table>
  <tr>
    <th>商品名</th>
    <th>単価（税込み）</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
  </tr>

<% @order_items.each do |order_item| %>
<tbody>
<tr>
  <td><%= order_item.item.name %></td>
  <td><%= (order_item.item.price * 1.1).floor %></td>
  <td><%= order_item.count %></td>
  <td><%= ( order_item.count*order_item.item.price * 1.1).floor %></td>
   <%= form_with model: order_item do |f| %>
   <!--enum-->
  <td><%#= f.select :order_status,["着手不可","製作待ち","製作中","製作完了"] %></td>
  <td><%= f.submit "更新" ,class:"btn btn-primary btn-xs" %></td>
  <% end %>
</tr>
</tbody>
<% end %>

<tr>
  <th>合計金額</th>
  <%= @total %>
  <th>送料</th>
  <%= @order.shipping_fee %>
  <th>請求金額合計</th>
  <%= @total + @order.shipping_fee %>
</tr>

