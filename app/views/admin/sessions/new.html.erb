<%= flash[:error] %>
<div class="container my-5">
  <div class="row">
    <div class="offset-3">
      <strong class="px-3">管理者の方はこちらからログイン</strong>
    </div>
  </div>

  <div class="row">
    <div class="offset-4 col-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group mt-5">
          <%= f.label :メールアドレス, class: "brown-border px-3 pb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control offset-1 col-10" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :パスワード, class: "brown-border px-3 pb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control offset-1 col-10" %>
        </div>

        <div class="offset-2 col-8">
          <%= f.submit "ログイン", class: "btn btn-outline-danger btn-block mt-5" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="offset-4 mx-auto mt-5">
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
