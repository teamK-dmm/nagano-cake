<div class="container">
  <h3>注文履歴一覧</h3><br>
	<table class="table table-hover">
	  <tr class="active">
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th></th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at, admin_order_path(order.id),'data-turbolinks': false %></td>
      <td><%= order.total_amount %></td>
      <td><%= order.status_i18n %></td>
    </tr>
    <% end %>
  </table>
</div>
</div>