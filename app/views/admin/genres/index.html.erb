<div class="container mt-5">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
      <!--何も入力していない時エラーが出るように-->
      <% if @genre.errors.any? %>
       <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <div class="col-sm-9 offset-sm-1">
       <%= form_with model: @genre,url: admin_genres_path do |f| %>
        <div class="field row ">

          <%= f.text_field :name %>
          <%= f.submit "追加", class: "btn btn-primary" %>
        </div>
      <% end %>

      <table class = "table table-hover">
        <thead>
          <tr class="active">
            <th>ジャンル</th>
            <th>状態</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id) ,class: "btn btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @genres %>
    </div>
  </div>
</div>