<div class="container hight ">
  <div class="row ">

    <h2>ジャンル一覧・追加</h2>

    <!--何も入力していない時エラーが出るように-->
    <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

     <!--ジャンル用form_で記載する時削除 -->
     <!--正直正しいか怪しいform_with?for?-->
     <%= form_with model: @genre do |f| %>
      <div class="field row ">
        <lavel></lavel>
        <%= f.text_field :name %>
       <!--ボタンの記述 -->
        <%= f.submit "追加", class: "btn btn-primary" %>
      </div>
    <% end %>

    <table class = "table table-hover">
      <thead>
        <tr class="active">
          <th>ジャンル</th>
          <th>状態</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_genre_path(genre.id) ,class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @genres %>
  </div>
</div>