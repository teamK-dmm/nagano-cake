<div class="container mt-5">
  <div class="row">
    <div class="col-sm-2">
      <%= form_with model: @genre do |f| %>
        <h4><%= f.label :"ジャンル追加" %></h4>
        <p><%= f.text_field :name %></p>
        <p><%= f.submit "追加", class: "btn btn-primary" %></p>
      <% end %>
    </div>



    <!--何も入力していない時エラーが出るように-->
    <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="col-sm-9 offset-sm-1">
    <table class = "table table-hover">
      <thead>
        <tr class="active">
          <th>ジャンル</th>
          <th>状態</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_genre_path(genre.id) ,class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @genres %>
         <!--ジャンル用form_で記載する時削除 -->
     <!--正直正しいか怪しいform_with?for?-->
    </div>
</div>