<div class="container mt-5">
<h2>検索結果</h2>
  <table class="table table-hover table-inverse">
    <tbody>
      <tr>
        <th>商品画像</th>
        <th>商品名</th>
        <th>商品説明</th>
        <th>商品単価（税抜き）</th>
        </tr>
        <% @items.each do |item| %>
          <tr>
            <td><%= image_tag item.get_image(100,100) %></td>
            <td><%= item.name %></td>
            <td><%= item.description %></td>
            <td><%= (item.price * 1.1).floor %>(<%= item.price %>)円</td>
          </tr>
        <% end %>
      </tbody>
</table>
</div>