<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-2">
      <h2 class="red-border px-3">新規会員登録</h2>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-4 col=4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :名前, class: "brown-border px-3" %>
        <div class="row">
          <%= f.text_field :first_name, placeholder:"姓 例）長野", class: "form-control offset-1 col-5" %>
          <%= f.text_field :last_name, placeholder:"名 例）恵子", class: "form-control offset-1 col-5" %>
        </div>
        <div class="row">
          <%= f.text_field :first_name_kana, placeholder:"名 例）ナガノ", class: "form-control offset-1 col-5" %>
          <%= f.text_field :last_name_kana, placeholder:"名 例）メイコ", class: "form-control offset-1 col-5" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :電話番号, class: "brown-border px-3" %><br />
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :住所, class: "brown-border px-3" %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号, class: "brown-border px-3" %><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class: "brown-border px-3" %>
        <% if @minimum_password_length %>
        <em>(最低<%= @minimum_password_length %>文字必要です。)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :確認用パスワード, class: "brown-border px-3" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="row">
        <%= f.submit "会員登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

  <div class="row">
    <div class="offset-3 mt-5">
      <strong class="red-border px-3 pb-1">既に登録済みの方</strong>
    </div>
  </div>

  <div class="row">
    <div class="offset-4 mx-auto mt-5">
      <%= render "public/shared/links" %>
    </div>
  </div>



