<!--会員側の配送先画面-->
<div class="container">
  <div class="row">
    <div class="col-7 m-auto">
      <h3>配送先登録/一覧</h3>

      <%= form_with model: @address do |f| %>
        <div>
          <div>
            <%= f.label :配送先名, class: 'form-label' %>
            <%= f.text_field :receiver_name, placeholder: '長野恵子', class: 'form-control mb-1' %>
          </div>
          <div>
            <%= f.label :住所, class: 'form-label' %>
            <%= f.text_field :address, placeholder: '大阪府大阪市北区', class: 'form-control mb-1' %>
          </div>
          <div>
            <%= f.label :郵便番号, class: 'form-label' %>
            <%= f.text_field :postal_code, placeholder: '0000-0000', class: 'form-control mb-1' %>
          </div>
            <%= f.submit "新規登録", class: 'btn btn-sm btn-success mt-2' %>
        </div>
        <% end %>

        <!--配送先一覧-->
        <table class='table mt-4'>
          <thead>
            <tr>
              <th>配送先名</th>
              <th>住所</th>
              <th>郵便番号</th>
            </tr>
          </thead>
          <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.receiver_name %></td>
              <td><%= address.address %></td>
              <td><%= address.postal_code %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address), class: 'btn btn-sm btn-primary' %>
                <%= link_to "削除する", address_path(address), method: :delete, class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>